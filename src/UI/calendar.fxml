<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controller.CalendarController"
            fx:id="calendarPane">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <top>
        <HBox>
            <ComboBox fx:id="calendarCombo" layoutX="15.0" layoutY="33.0" prefWidth="90.0">
            </ComboBox>
            <Label text="Lemon Calendar" />
            <Label fx:id="testchange" text="nothing" />
            <Button fx:id="CreateGroupButton" text="Create Group" onAction="#createGroup"/>
        </HBox>
    </top>
    <center>
            <BorderPane>
                <top>
                    <HBox>
                        <Button fx:id="calendarBack" text="Last Month" onAction="#goToLastMonth"/>
                        <Label fx:id="monthYear" textAlignment="CENTER"/>
                        <Button fx:id="calendarNext" text="Next Month" onAction="#goToNextMonth"/>
                    </HBox>
                </top>
                <center>
                    <AnchorPane fx:id="calendarAnchor"
                                prefHeight="370" prefWidth="420">
                        <TilePane fx:id="calendarTile" />
                    </AnchorPane>
                </center>
            </BorderPane>
    </center>
    <bottom>
        <HBox>

        </HBox>
    </bottom>
</BorderPane>
